#client.unfocused 		#3b4252 #3b4252 #3b4252 #3b4252 
#client.focused_inactive #d8dee9 #d8dee9 #888888 #292d2e
#client.urgent 			#2f343a #900000 #ffffff #900000

for_window [class=".*"] border pixel 1
for_window [class="Ulauncher"] border none

for_window [class="Pavucontrol"] floating enable
for_window [class="Gpick"] floating enable
for_window [class="Eog"] floating enable
for_window [class="firefoxdeveloperedition" title="Library"] floating enable

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="About"] floating enable 
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Create Log out, Reboot, Poweroff bindings
mode "(P)olybar  (I)3WM  (N)cmpcpp  (A)lacritty  Pi(c)om" {
        bindsym p exec --no-startup-id alacritty -e micro ~/.config/polybar/config
        bindsym i exec --no-startup-id alacritty -e micro ~/.config/i3/config
        bindsym n exec --no-startup-id alacritty -e micro ~/.config/ncmpcpp/config
        bindsym a exec --no-startup-id alacritty -e micro ~/.config/alacritty/alacritty.yaml
        bindsym c exec --no-startup-id alacritty -e micro ~/.config/picom/picom.conf
        bindsym q mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+c mode "(P)olybar  (I)3WM  (N)cmpcpp  (A)lacritty  Pi(c)om"


# Create Log out, Reboot, Poweroff bindings
mode "(S)uspend, (L)ogout, (R)eboot, (P)oweroff" {
        bindsym r exec --no-startup-id systemctl reboot
        bindsym s exec --no-startup-id exec $lock & systemctl suspend; mode "default"
        bindsym l exit
        bindsym p exec --no-startup-id systemctl poweroff
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "(S)uspend, (L)ogout, (R)eboot, (P)oweroff"

